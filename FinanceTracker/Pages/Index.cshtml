	<table id="budget-table" class="table table-bordered table-hover">
		<thead>
		<tr>
			<th> @Html.DisplayNameFor(model => model.Budget.CashIn) </th>
			<th> @Html.DisplayNameFor(model => model.Budget.CashOut) </th>
			<th> @Html.DisplayNameFor(model => model.Budget.DisposableIncome)</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td>@Html.DisplayFor(model => model.Budget.CashIn)</td>
			<td>@Html.DisplayFor(model => model.Budget.CashOut)</td>
			<td>@Html.DisplayFor(model => model.Budget.DisposableIncome)</td>
			<td>
				<a asp-page="./Budget/Edit" asp-route-id="1">Edit</a>
			</td>
		</tr>
		</tbody>
	</table>
</section>

