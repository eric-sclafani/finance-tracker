@model List<Models.FixedExpense>

<table id="expense-table" class="table table-bordered table-hover">
	<thead>
	<tr>
		<th> @Html.DisplayNameFor(model => model[0].Category) </th>
		<th> @Html.DisplayNameFor(model => model[0].Amount) </th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@Html.DisplayFor(modelItem => item.Category)</td>
			<td>$@Html.DisplayFor(modelItem => item.Amount)</td>
			<td>
				<a asp-page="./FixedExpense/Edit" asp-route-id="@item.Id">Edit</a> |
				<a asp-page="./FixedExpense/Delete" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
	}
	</tbody>
</table>